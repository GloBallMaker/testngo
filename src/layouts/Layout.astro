---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Making the world a better place" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-black">
		<div class="stars"></div>
		<slot />
		<script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
		<script is:inline>
			document.addEventListener('DOMContentLoaded', function() {
				AOS.init({
					duration: 800,
					once: true,
				});
			});
		</script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 79, 70, 229;
		--accent-light: 236, 72, 153;
		--accent-dark: 49, 46, 129;
	}
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
		background-color: black;
	}
	body {
		margin: 0;
		padding: 0;
		overflow-x: hidden;
	}
	
	/* Cosmic background with stars */
	.stars {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		background: radial-gradient(circle at center, #1a1a1a 0%, #000 100%);
		z-index: -1;
	}
	
	.stars::before {
		content: '';
		position: absolute;
		width: 100%;
		height: 100%;
		background-image: 
			radial-gradient(2px 2px at 20px 30px, #fff, rgba(0,0,0,0)),
			radial-gradient(2px 2px at 40px 70px, #fff, rgba(0,0,0,0)),
			radial-gradient(2px 2px at 50px 160px, #fff, rgba(0,0,0,0)),
			radial-gradient(2px 2px at 90px 40px, #fff, rgba(0,0,0,0)),
			radial-gradient(2px 2px at 130px 80px, #fff, rgba(0,0,0,0));
		background-repeat: repeat;
		background-size: 200px 200px;
		animation: twinkle 4s ease-in-out infinite;
		opacity: 0.5;
	}

	@keyframes twinkle {
		0%, 100% { opacity: 0.5; }
		50% { opacity: 1; }
	}

	/* Glowing elements */
	.glow {
		animation: glow 2s ease-in-out infinite alternate;
	}

	@keyframes glow {
		from {
			box-shadow: 0 0 20px #4F46E5, 0 0 40px #4F46E5;
		}
		to {
			box-shadow: 0 0 30px #EC4899, 0 0 50px #EC4899;
		}
	}
</style>